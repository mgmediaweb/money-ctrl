<div class="col-12 col-md-6 col-lg-4 col-xl-3 pe-3 mb-4">
  <div class="card">
    <div class="card-body p-2 pb-4">

      <div class="d-flex align-items-center justify-content-between">
        <%= link_to title_text(transaction.name), edit_transaction_path(transaction), class: 'card-text fw-bold' %>

        <p class="m-0 p-0">
          <%=number_to_currency(transaction.amount, :unit => "$") %>
        </p>
      </div>

      <div class="border-top mt-2 pt-2 d-flex">
        <% transaction.categories.each do |category| %>
          <p class="m-0 p-0">
            <%= image_tag(category.icon, alt: category.name, title: category.name, class: 'card-image-thumb') %>
          </p>
        <% end %>
      </div>

      <div class="d-flex">
        <%= button_to transaction_path(transaction), { method: :delete, data: { turbo: false }, class: 'btn-delete'} do %>
          <img src="<%= asset_path('icon_close.svg') %>" alt="Delete" title="Delete" class="btn-delete-img" />
        <% end %>
      </div>

      <span class="badge rounded-pill bg-secondary position-absolute top-100 start-50 translate-middle">
        <%= transaction.created_at.strftime("%b %d, %Y") %>
      </span>
    </div>
  </div>
</div>
